  font-size: 0.7rem
  color: mainColor
  text-align: center;

  a
    font-size: 0.8rem
    color: secondaryColor



// GUI update

.dg .cr.image {
  position: relative;
  height: auto;
  border-left: 3px solid #2FA1D6;

  .preview {
    display: block;
    width: calc(100% + 5px);
    padding: 4px 0;
    margin-left: -5px;
  }
  input {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    opacity: 0;

    cursor: pointer;
  }
}