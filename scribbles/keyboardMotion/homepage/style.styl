mainColor = #A5A5A4
secondaryColor = #C9F0FF
bgColor = #fff

body, html
  width: 100%;
  height: 100%;
  overflow: hidden
  background-color: bgColor
  margin: 0
  font-family: Helvetica, Arial, Century Gothic,CenturyGothic,AppleGothic,sans-serif

.f
  position: fixed
  bottom: 5px
  right: 15px
  font-family: 'Arial'
  font-size: 0.7rem
  color: mainColor
  text-align: center;

  a
    font-size: 0.8rem
    color: secondaryColor


body {
  display: flex;
  position: relative;
}

.Block {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 4em;
  color: mainColor;
  text-decoration: none;
  transition: 0.2s;

  &:first-child {
    &::after {
      content: '';
    }
  }

  &:hover {
    background-color: mainColor;
    color: white;
  }
}

.Separator {
  display: block;
  position: absolute;
  top: 40px;
  bottom: 40px;
  width: 2px;
  left: 50%;
  transform: translate(-50%, 0);
  background-color: mainColor;
}
