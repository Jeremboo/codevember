// INIT
mainColor = #070707
secondaryColor = #C9F0FF
bgColor = #eee;

center() {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

*
  margin: 0;
  padding: 0;

body, html
  width: 100%;
  height: 100%;
  overflow: hidden
  background-color: bgColor
  font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif
  font: 71%/1.5 Verdana, Sans-Serif;

.input:focus, textarea:focus {
    outline: none !important;
    border:1px solid red;
    box-shadow: 0 0 10px #719ECE;
}

.f
  position: fixed
  bottom: 5px
  right: 15px
  font-family: 'Arial'
  font-size: 0.7rem
  color: mainColor
  text-align: center;

  a
    font-size: 0.8rem
    color: secondaryColor

#container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

#write {
  center();
  margin: 0 0 5px;
  padding: 5px;
  font: 2em Verdana, Sans-Serif;
  background: bgColor;
  border: 1px solid #f9f9f9;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  text-align: center;
  border: 0;
  display: none;
}

#text {
  position: relative;
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding: 50px 30px;

  charSize = 30px;
  .character {
    display: block;
    position: relative;
    // width: charSize;
    // height: charSize;

    // hack
    .marker {
      position: absolute;
      width: charSize * 0.5;
      height: charSize * 0.5;
      border-radius: charSize * 0.25
    }

    span {
      // center();
      display: block;
      // min-width: charSize * 0.5;
      // min-height: charSize * 0.5;
      font-size: charSize * 1.5;
      letter-spacing: 1px;
    }
  }
}
#wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

  &.hidden {
    display: none;
  }
}

keyboard(letterSize) {
  #keyboard {
    margin: 0;
    padding: 0;
    list-style: none;



    li {
        float: left;
        margin: 0 (letterSize * 0.125) (letterSize * 0.125) 0;
        width: letterSize;
        height: letterSize;
        line-height: letterSize;
        text-align: center;
        background: #fff;
        border: letterSize * 0.025 solid #f9f9f9;
        border-radius: (letterSize * 0.125);
        user-select: none;

        // &:hover {
        //   position: relative;
        //   top: 1px;
        //   left: 1px;
        //   border-color: #e5e5e5;
        //   cursor: pointer;
        // }
    }

    .tab, .delete {
      width: letterSize * 1.75;
    }
    .capslock {
      width: letterSize * 2;
    }
    .return {
      width: letterSize * 1.925;
    }
    .left-shift {
      width: letterSize * 2.375;
    }
    .right-shift {
      width: letterSize * 2.725;
    }
    .lastitem {
      margin-right: 0;
    }
    .uppercase {
      text-transform: uppercase;
    }
    .space {
      clear: left;
      width: letterSize * 17.025;
    }
    .on {
      display: none;
    }

    .off, .on {
      pointer-events: none;
    }
  }

  .capslock, .tab, .left-shift {
    clear: left;
  }
}


// letterSize = 40px;
@media screen and (min-width: 620px) and (max-width: 800px) {
  keyboard(35px);
}
@media screen and (min-width: 360px) and (max-width: 620px) {
  keyboard(20px);
}
@media screen and (max-width: 359px) {
  keyboard(15px);
}
@media screen and (min-width: 800px) and (max-width: 1023px) {
  keyboard(40px);
}
@media screen and (min-width: 1024px) {
  keyboard(50px);
}


// HELPERS
.marker {
  position: fixed;
  width: 5px;
  height: 5px;
  border-radius: 3px;
  opacity: 0.5;
  background-color: red;
  transform: translate(-50%, -50%);
  pointer-events: none;

  &.green {
    background-color: green;
  }

  &.blue {
    background-color: blue;
  }
}
