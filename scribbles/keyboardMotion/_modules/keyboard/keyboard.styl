// KEYBOARD
keyboard(letterSize) {
  #keyboard {
    // position: fixed;
    // bottom: 0;
    font: 71%/1.5 Verdana, Sans-Serif;
    margin: 0;
    padding: 0;
    list-style: none;

    // Hack
    .marker {
      z-index: 2;
    }

    li {
        float: left;
        margin: 0 (letterSize * 0.125) (letterSize * 0.125) 0;
        width: letterSize;
        height: letterSize;
        line-height: letterSize;
        text-align: center;
        background: #fff;
        border: letterSize * 0.025 solid #f9f9f9;
        border-radius: (letterSize * 0.125);
        user-select: none;

        // &:hover {
        //   position: relative;
        //   top: 1px;
        //   left: 1px;
        //   border-color: #e5e5e5;
        //   cursor: pointer;
        // }
    }

    .tab, .delete {
      width: letterSize * 1.75;
    }
    .capslock {
      width: letterSize * 2;
    }
    .return {
      width: letterSize * 1.925;
    }
    .left-shift {
      width: letterSize * 2.375;
    }
    .right-shift {
      width: letterSize * 2.725;
    }
    .lastitem {
      margin-right: 0;
    }
    .uppercase {
      text-transform: uppercase;
    }
    .space {
      clear: left;
      width: letterSize * 17.025;
    }
    .on {
      display: none;
    }

    .off, .on {
      pointer-events: none;
    }
  }

  .capslock, .tab, .left-shift {
    clear: left;
  }
}
