// KEYBOARD
keyboard(letterSize) {
  #keyboard {
    position: relative;
    width: 100%;
    max-width: 500px;
    background-color: #eeeeed;
    color: #2D2C2D;
    display: flex;
    justify-content: flex-end;
    flex-direction: column;
    // position: fixed;
    // bottom: 0;
    font: 71%/1.5 Verdana, Sans-Serif;
    margin: 0;
    padding: 0;
    list-style: none;

    & > div {
      display: flex;
      justify-content: center;
    }

    &:before {
      content: '';
      z-index: -1;
      position: absolute;
      background-color: #eeeeed;
      left: -1000px;
      right: -1000px;
      top: -2px;
      height: 100%;
    }

    li {
        // float: left;
        // margin: 0 (letterSize * 0.125) (letterSize * 0.125) 0;
        // width: letterSize * 1.2;
        width: 10%;
        height: letterSize * 0.9;
        line-height: letterSize;
        text-align: center;
        background-color: #ffffff;
        border: letterSize * 0.025 solid #eeeeed;
        border-radius: (letterSize * 0.125);
        user-select: none;

        // &:hover {
        //   position: relative;
        //   top: 1px;
        //   left: 1px;
        //   border-color: #e5e5e5;
        //   cursor: pointer;
        // }
    }

    .tab, .delete {
      width: letterSize * 1.75;
    }
    .capslock {
      // width: letterSize * 2;
    }
    .return {
      width: letterSize * 1.925;
    }
    .left-shift {
      width: letterSize * 2.375;
    }
    .right-shift {
      width: letterSize * 2.725;
    }
    .lastitem {
      margin-right: 0;
    }
    .uppercase {
      text-transform: uppercase;
    }
    .space {
      clear: left;
      // width: letterSize * 17.025;
      width: 70%;
    }
    .on {
      display: none;
    }

    .off, .on {
      pointer-events: none;
    }

    .special {
      width: 20%;
      color: #ffffff;
      background-color: #A5A5A4;
    }

    .locked {
      pointer-events: none;
      // color: rgba(255, 255, 255, 0.5);
    }
  }

  .capslock, .tab, .left-shift {
    clear: left;
  }
}
