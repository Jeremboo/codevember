// INIT
mainColor = #070707
secondaryColor = #251014
bgColor = #151232

body, html
  width: 100%;
  height: 100%;
  overflow: hidden
  background-color: bgColor
  margin: 0
  font-family: Century Gothic,CenturyGothic,AppleGothic,sans-serif
  background: bgColor;
  background: linear-gradient(45deg, bgColor 0%,secondaryColor 100%);

.f
  position: fixed
  bottom: 5px
  right: 15px
  font-family: 'Arial'
  font-size: 0.7rem
  color: mainColor
  text-align: center;

  a
    font-size: 0.8rem
    color: secondaryColor

#wrapper
  position: absolute;
  left: 40px
  top: 50%
  transform: translate(0, -50%)


// CLASS
.SurfaceAnimation {
  font-family: monospace;

  &-helper {
    position: fixed;
    transform-origin: 0 0;
    top: 16px;
    left: 16px;
    transition: transform 0.1s

    &:hover {
      transform: scale(5);
    }
  }

  p {
    margin: 0;
    padding: 0;
    display: flex;
  }

  span {
    display: block;
    width: 0.8em;
    height: 1em;
  }
}

// HACK
.SurfaceAnimation {
  p {
    color: white;
    font-weight: 700;
    text-transform: uppercase;
    height: 1.5em;
  }
}
